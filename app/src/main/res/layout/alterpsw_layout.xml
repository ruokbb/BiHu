<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@mipmap/alterbackground"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.redrock_work.alteravtar_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <android.support.v7.widget.CardView
            app:cardElevation="20dp"
            app:cardCornerRadius="15dp"
            app:contentPadding="20dp"

            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/alterpsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="10sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:inputType="textNoSuggestions"
                android:drawableLeft="@mipmap/avatar"
                android:hint="输入新密码" />

            <Button
                android:id="@+id/alterpsw_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="确认"
                android:textSize="20sp"
                android:background="@drawable/long_button"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

</LinearLayout>
