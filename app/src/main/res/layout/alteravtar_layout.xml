<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@mipmap/alterbackground"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.redrock_work.alteravtar_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="7"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <android.support.v7.widget.CardView
        app:cardElevation="20dp"
        app:cardCornerRadius="15dp"
        app:contentPadding="20dp"

        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>


        <ImageView
            android:id="@+id/alteravatar_avatar"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/alteravatar_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="确认"
            android:textSize="20sp"
            android:background="@drawable/long_button"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alteravatar_choseImage"
            android:background="@drawable/long_button"
            android:text="选择照片"
            android:textSize="20sp"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

</LinearLayout>
