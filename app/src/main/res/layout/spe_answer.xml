<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#E6E6E6"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15sp"
            />

        <TextView
            android:id="@+id/spe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:maxLines="2"
            android:textColor="#000000"
            android:textStyle="bold"
            android:ellipsize="end"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#E6E6E6"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="5sp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/spe_answer"
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:text="写回答 "
                android:textSize="15sp"
                android:textColor="#0086e9"
                android:textStyle="bold"
                android:layout_weight="2"
                android:drawableLeft="@mipmap/add"
                android:background="@drawable/round_button"
                />
            <TextView
                android:layout_width="0sp"
                android:layout_height="30sp"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/spe_more"
                android:layout_weight="3"
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:drawableRight="@mipmap/more"
                android:text="查看全部回答"
                android:textSize="15sp"
                android:background="#00000000"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8sp"
            android:background="#c6c6c6"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="10sp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/spe_avatar"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/spe_name"
                android:textSize="17sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无名氏"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>

            <TextView
                android:layout_width="10sp"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#E6E6E6"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spe_content"
            android:textColor="#000000"
            android:text="暂时还没有回答"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/spe_recycle">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="5sp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/spe_exciting"
                android:layout_width="0sp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="点赞"
                android:background="@drawable/round_button"
                />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                />

            <Button
                android:id="@+id/spe_naive"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="踩一下"
                android:background="@drawable/round_button"/>


            <TextView
                android:layout_width="5sp"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </LinearLayout>

</ScrollView>