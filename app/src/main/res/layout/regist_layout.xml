<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timg"
    tools:context="com.example.redrock_work.RegistActivity">


    <ImageView
        android:id="@+id/logo"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="30%"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo" />

    <ImageView
        android:id="@+id/usernamep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="35%"
        android:src="@mipmap/username" />



    <EditText
        android:id="@+id/username"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/usernamep"
        app:layout_marginTopPercent="34%"
        android:hint="用户名"
       />

    <ImageView
        android:id="@+id/pswp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/psw"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="45%"
        />

    <EditText
        android:id="@+id/psw"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:layout_toRightOf="@+id/pswp"
        app:layout_marginTopPercent="44%"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/login"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="6%"
        android:text="登陆"
        android:background="@drawable/long_button_bule"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="55%"
        />
    <Button
        android:id="@+id/regiest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有注册？"
        android:textColor="#0997F7"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="90%"
        android:background="#00000000"

        />

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/psw"
        android:visibility="invisible"
        />

</android.support.percent.PercentRelativeLayout>
