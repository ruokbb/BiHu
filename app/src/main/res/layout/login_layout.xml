<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timg"
    tools:context="com.example.redrock_work.LoginActivity">


    <ImageView
        app:layout_widthPercent="50%"
        app:layout_heightPercent="30%"
        android:src="@mipmap/logo"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/registnamep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/username"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="35%"
        />

    <EditText
        android:id="@+id/registname"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/registnamep"
        app:layout_marginTopPercent="34%"
        android:hint="请输入用户名"
        />

    <ImageView
        android:id="@+id/registpswp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/psw"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="45%"
        />

    <EditText
        android:id="@+id/registpsw"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="44%"
        android:layout_toRightOf="@+id/registpswp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        />

    <ImageView
        android:id="@+id/registpswp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/psw"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="55%"
        />

    <EditText
        android:id="@+id/registpsw2"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="54%"
        android:layout_toRightOf="@+id/registpswp2"
        android:hint="再次输入密码"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/regist"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="6%"
        android:text="注册"
        android:background="@drawable/long_button_bule"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="65%"
        />

    <Button
        android:id="@+id/returnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="90%"

        />



</android.support.percent.PercentRelativeLayout>
